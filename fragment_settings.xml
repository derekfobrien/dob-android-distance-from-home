<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#154F81"
    tools:context=".SettingsFragment">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textGPSCurrent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/set_home" />

    <TextView
        android:id="@+id/textGPSCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textGPSBefore"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:paddingTop="20dp"
        android:text="@string/blank_coords"
        android:textColor="#FFFFFF"
        android:textSize="72sp" />

    <TextView
        android:id="@+id/textGPSBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp"
        android:text="@string/current_gps"
        android:textColor="#42D7EF"
        android:textSize="48sp" />

    <Switch
        android:id="@+id/swDisplayFullValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:text="@string/display_full_values"
        android:textColor="#AAAAAA" />

</RelativeLayout>